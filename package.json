    "build": "yarn tsup src/index.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^26.0.0",
    "prettier": "^2.5.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  },
  "volta": {
    "node": "20.17.0",
    "yarn": "1.22.19"
  }
}
